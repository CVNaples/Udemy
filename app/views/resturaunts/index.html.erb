<p id="notice"><%= notice %></p>

<h1>Resturaunts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resturaunts.each do |resturaunt| %>
      <tr>
        <td><%= resturaunt.name %></td>
        <td><%= resturaunt.address %></td>
        <td><%= link_to 'Show', resturaunt %></td>
        <td><%= link_to 'Edit', edit_resturaunt_path(resturaunt) %></td>
        <td><%= link_to 'Destroy', resturaunt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

